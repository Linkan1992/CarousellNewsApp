<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_article_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="W,1:2.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/placeholder" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_article_title"
            style="@style/NewsTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="@id/imv_article_image"
            app:layout_constraintStart_toStartOf="@id/imv_article_image"
            app:layout_constraintTop_toBottomOf="@id/imv_article_image"
            tools:text="Title ascdajsnjaksdnfjasndjdnfasjlndlansldnasndnaslndlasndls" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_article_description"
            style="@style/NewsDescriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/mtv_article_title"
            app:layout_constraintStart_toStartOf="@id/mtv_article_title"
            app:layout_constraintTop_toBottomOf="@id/mtv_article_title"
            app:layout_constraintVertical_bias="0"
            tools:text="fadfadfadfdv fadfadfadf adfadf adfdafa fadf adfa dfadfa asdfasf ddafaf dadfaadfadfadfa adfadfadfad adfadfadf" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_time_created"
            style="@style/NewsTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/mtv_article_title"
            app:layout_constraintStart_toStartOf="@id/mtv_article_title"
            app:layout_constraintTop_toBottomOf="@id/mtv_article_description"
            app:layout_constraintVertical_bias="0"
            tools:text="fadfadfadfdv fadfadfadf adfadf adfdafa fadf adfa dfadfa asdfasf ddafaf dadfaadfadfadfa adfadfadfad adfadfadf" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>